<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users
    </h1>

    <a href="/users/new" class="btn btn-block btn-outline-secondary">
      Add a new user
    </a>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |like| %>
      <tr>
        <td>
          <%= like.id %>
        </td>

        <td>
          <%= like.email %>
        </td>

        <td>
          <%= like.username %>
        </td>

        <td>
          <%= time_ago_in_words(like.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(like.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
