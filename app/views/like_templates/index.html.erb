<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All likes
    </h1>

    <a href="/likes/new" class="btn btn-block btn-outline-secondary">
      Add a new like
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td>
          <%= like.id %>
        </td>

        <td>
          <%= like.user_id %>
        </td>

        <td>
          <%= like.photo_id %>
        </td>

        <td>
          <%= time_ago_in_words(like.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(like.updated_at) %> ago
        </td>

        <td>
          <a href="/likes/<%= like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
