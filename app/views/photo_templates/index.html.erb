<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All photos
    </h1>

    <a href="/photos/new" class="btn btn-block btn-outline-secondary">
      Add Photo
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td>
          <%= photo.id %>
        </td>

        <td>
          <%= photo.caption %>
        </td>

        <td>
          <img src='<%= photo.image %>' />
        </td>

    

        <td>
          <%= time_ago_in_words(photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
